extends layout
include utils.pug
block content
  div(class='center-container')
        h1 Sign Up
        div(class="form-container")
          +validationErrorSummary(errors)
          form(action="/users/signup" method="post")
            input(type="hidden" name="_csrf" value=csrfToken)
            div(class="input-container")
              label(for="userName") Username:
              input(class="login-input" type="text" name="userName" id="userName" value=userName)
            div(class="input-container")
              label(for="email") Email:
              input(class="login-input" type="email" name="email" id="email" value=email)
            div(class="input-container")
              label(for="firstName") First Name:
              input(class="login-input" type="text" name="firstName" id="firstName" value=firstName)
            div(class="input-container")
              label(for="lastName") Last Name:
              input(class="login-input" type="text" name="lastName" id="lastName" value=lastName)
            div(class="input-container")
              label(for="password") Password:
              input(class="login-input" type="password" name="password" id="password")
            div(class="input-container")
              label(for="confirmPassword") Confirm Password:
              input(class="login-input" type="password" name="confirmPassword" id="confirmPassword")
            div(class="submit-div")
              button(class="btn" type="submit") Submit
