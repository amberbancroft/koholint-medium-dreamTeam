    if authenticated
      div(class="header-nav__container")
        span(id='buttons', class="header-nav__group")
          img(id='nav-image', src="/images/avocado2.png")
          h1: a(href="/")  Avocati
          div(id='vl')
            h2= title
        span(id='buttons')
          //- added id to clear store, blockLike
          a(href='/users/logout'): button(class='text-only' id="logout-button") Sign Out  
          a(href='/story-new'): button(class='text-only') Write
          a(href=`/users/${user.id}`): button(class='landing-button') My Profile
    else
      div(class="header-nav__container")
        span(id='buttons', class="header-nav__group")
          img(id='nav-image', src="/images/avocado2.png")
          h1: a(href="/") Avocati
          div(id='vl')
            h2= title
        span(id='buttons')
          a(href='/users/login'): button(type='submit', class='text-only') Sign in
